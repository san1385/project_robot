<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>

    <material name="green">
        <color rgba="0 0.7 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="0.7 0 0 1"/>
    </material>

    <material name="silver">
        <color rgba="0.75 0.75 0.75"/>
    </material>

    <link name="base_link">
       
    </link>

    <link name="chassis_link">
         <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz = "0 0 0.1" rpy="0 0 0" />
            <material name="silver"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz = "0 0 0.1" rpy="0 0 0" />
        </collision>

        <xacro:inertial_box mass="3.0" x = "0.6" y = "0.4" z = "0.2">
            <origin xyz="0 0 0.1 " rpy ="0 0 0"/>
        </xacro:inertial_box>
    </link>
    

      <link name ="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
           
        </collision>

         <xacro:inertial_cylinder mass="0.05" length="0.05" radius="1.0">
            <origin xyz="0 0 0 " rpy ="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <link name ="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            
        </collision>

        <xacro:inertial_cylinder mass="0.05" length="0.05" radius="1.0">
            <origin xyz="0 0 0 " rpy ="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <link name="caster_wheel_1">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="silver"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            
        </collision>

        <xacro:inertial_sphere mass="0.005" radius="1.0">
            <origin xyz="0 0 0 " rpy ="0 0 0"/>
        </xacro:inertial_sphere>

    </link>

     <link name="caster_wheel_2">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="silver"/>
            
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            
        </collision>

          <xacro:inertial_sphere mass="0.005" radius="1.0">
            <origin xyz="0 0 0 " rpy ="0 0 0"/>
          </xacro:inertial_sphere>

    </link>


    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0 0 0"/>
    </joint> 


  <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.225 0" rpy ="0 0 0" />
        <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.225 0" rpy ="0 0 0" />
        <axis xyz="0 1 0"/>
  </joint>

   <joint name="base_caster_wheel_1_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="caster_wheel_1"/>
        <origin xyz="-0.2 0 0" rpy="0 0 0"/>
    </joint>

     <joint name="base_caster_wheel_2_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="caster_wheel_2"/>
        <origin xyz="0.2 0 0" rpy="0 0 0"/>
    </joint>

    <gazebo reference="caster_wheel_1">
        <mu1 value="0"/>
        <mu2 value="0"/>
    </gazebo>

     <gazebo reference="caster_wheel_2">
        <mu1 value="0"/>
        <mu2 value="0"/>
    </gazebo>

</robot>